<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="myDefault" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="loginInterceptor" class="cn.ustc.web.interceptor.LoginInterceptor"/>
			<interceptor-stack name="myStack">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="loginInterceptor">
					<param name="exclude">none</param>	
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<global-results>
			<result name="login">/user/login.jsp</result>
			<result name="error">/error.jsp</result>
			<result name="input">/input.jsp</result>
		</global-results>
	</package>

	<package name="token" namespace="/token" extends="myDefault">
		<action name="user_register" method="register" class="cn.ustc.web.action.UserAction">
			<interceptor-ref name="token"/>
			<interceptor-ref name="myStack"/>
			<result name="invalid.token">/token_error.jsp</result>
			<result name="input">/user/login.jsp</result>
			
			<result name="registerSUCCESS">/user/login.jsp</result>
			<result name="registerINPUT">/user/register.jsp</result>
		</action>
	</package>
	
	<package name="myjson" extends="json-default">
		<interceptors>
			<interceptor name="loginInterceptor" class="cn.ustc.web.interceptor.LoginInterceptor"/>
			<interceptor-stack name="myStack">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="loginInterceptor">
					<param name="exclude">none</param>	
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="myStack"/>
		
		<action name="checkUserName" class="cn.ustc.web.action.UserAction" method="checkUserName">
			<!-- 要点二 ：结果集类型 必须指定为 json -->
			<!-- 默认将值栈顶端对象返回，如果没有实现ModelDriven ，Action就是顶端对象 -->
			<result type="json"></result>
		</action>
		<action name="listVocation" class="cn.ustc.web.action.ListVocation" method="ListVocation">
			<result type="json"></result>
		</action>
	</package>
	
	<package name="project" namespace="/consult" extends="myDefault">
		
		<action name="consult_*" method="{1}" class="cn.ustc.web.action.ConsultAction">
			<!-- <interceptor-ref name="myStack">
				<param name="loginInterceptor.exclude">none</param>			
			</interceptor-ref> -->
			
			<result name="publishSUCCESS">/success.jsp</result>
			<result name="listSUCCESS">/project/consult_list.jsp</result>
			<result name="allowListSUCCESS">/project/consult_recieve.jsp</result>
			<result name="viewSUCCESS">/project/consultInfo.jsp</result>
			<result name="checkSUCCESS" type="redirectAction">consult_list</result>
			<result name="checkFAIL" type="redirectAction">consult_list</result>
			
			<result name="downSUCCESS" type="stream">
				<!-- 下载流 getInputStream -->
				<param name="contentType">${contentType}</param>
				<param name="contentDisposition">attachment;filename=${downloadFileName}</param>
			</result>
		</action>
	</package>
</struts>